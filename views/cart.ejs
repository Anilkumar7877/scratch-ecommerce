<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('partials/header') %>
    <% user.cart.forEach(function(item) { %>
        <div class="flex w-screen h-3/5">
            <div class="w-1/3 flex justify-center items-center">
                <div class="w-4/5 flex flex-col h-4/5 rounded-lg overflow-hidden border border-black">
                    <div class="bg-zinc-900 w-full h-3/4">
                        <img class="w-full h-full object-cover"
                            src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                    </div>
                    <div class="bg-zinc-600 flex justify-between items-center h-16 px-2">
                        <h1 class="text-xl font-semibold">
                            <%= item.name %>
                        </h1>
                        <div>
                            <span>-</span>
                            <span>01</span>
                            <span>+</span>
                        </div>
                    </div>
                    <div class="bg-zinc-400 flex justify-between h-16 items-center px-2">
                        <span class="text-xl font-semibold">Net Total</span>
                        <span class="text-xl font-bold">
                            <%= item.price+20-item.discount %>
                        </span>
                    </div>
                </div>
            </div>
            <div class="w-2/3 flex justify-start items-center px-20 ">
                <div class="flex flex-col gap-2">
                    <h2 class="text-xl">Price Breakdown</h2>
                    <div class="flex flex-col gap-2 px-8">
                        <div class="flex gap-12">
                            <div class="w-72">Total MRP</div>
                            <div>
                                <%= item.price %>
                            </div>
                        </div>
                        <div class="flex gap-12">
                            <div class="w-72">Discount on MRP</div>
                            <div>
                                <%= item.discount %>
                            </div>
                        </div>
                        <div class="flex gap-12">
                            <div class="w-72">Platform Fee</div>
                            <div>20</div>
                        </div>
                        <div class="flex gap-12">
                            <div class="w-72">Shipping Fee</div>
                            <div>FREE</div>
                        </div>
                    </div>
                    <div class="h-0 w-full border-2 border-zinc-600"></div>
                    <div class="flex gap-12">
                        <div class="w-72 text-xl">Total Amount</div>
                        <div class="text-green-600 px-8 text-xl font-semibold">
                            <%= item.price+20-item.discount %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } ) %>
</body>

</html>